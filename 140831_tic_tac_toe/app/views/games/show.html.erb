<% if @game.result == "active" %>

<% @move_player = 1 if @game.moves.count.even? %>
<% @move_player = 2 if @game.moves.count.odd? %>

  <% for @n in 1..9 do %>
  <% move = @game.moves.where(square: @n).first %>
    <%= link_to @n, new_move_path(game_id: @game, square: @n, player_number: @move_player) if move == nil %>
    <%= "O" if move != nil && move.player_number == 1 %>
    <%= "X" if move != nil && move.player_number == 2 %>
  <% end %>

<% elsif @game.result == "draw" %>
  It's a draw!

<% else %>

<% if @game.game_type == "pass" %>
   <%= "Player 1 has won!" if @game.result == "player_1" %>
   <%= "Player 2 has won!" if @game.result == "player_2" %>
<% else %>
  <%= "You won!" if @game.result == "player_1" && @game.player_1_id == current_user.id %>
  <%= "You won!" if @game.result == "player_2" && @game.player_2_id == current_user.id %>
  <%= "You lost!" if @game.result == "player_1" && @game.player_1_id != current_user.id %>
  <%= "You lost!" if @game.result == "player_2" && @game.player_2_id != current_user.id %>
<% end %>
<% end %>

  