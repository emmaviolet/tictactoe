Who do you want to play with?

<%= form_for @game, url: games_new_friend_path, method: :put do |g| %>
<% @user = User.find(params[:user]) %>
  <% @user.friends.each do |f| %>
  <%= radio_button(:player_2_id, :player_2_id, f.id) %>
  <%= label :player_2_id, f.email %><br>
<% end %>

<%= g.hidden_field :game_id, :value => @game.id %>

<%= g.submit "Choose friend" %>

<% end %>

<%= link_to 'Add a Friend', new_friendship_path %>